  <!-- Cadastro de Produto -->
  <div class="card">
    <h3>Cadastrar Produto</h3>
    <input type="text" id="nomeProduto" placeholder="Nome do produto">
    <input type="number" id="precoProduto" placeholder="PreÃ§o (R$)">
    <button onclick="cadastrarProduto()">Cadastrar</button>
  </div>

  <!-- Lista de Produtos -->
  <div class="card">
    <h3>Produtos Ã  venda</h3>
    <div id="listaProdutos"></div>
  </div>

  <!-- Saque -->
  <div class="card">
    <h3>Solicitar Saque</h3>
    <input type="text" id="chavePix" placeholder="Sua chave Pix">
    <input type="number" id="valorSaque" placeholder="Valor a sacar">
    <button onclick="sacar()">Sacar</button>
    <p id="msgSaque"></p>
  </div>

  <script>
    let produtos = [];

    function cadastrarProduto() {
      const nome = document.getElementById("nomeProduto").value;
      const preco = document.getElementById("precoProduto").value;

      if (!nome || !preco) {
        alert("Preencha todos os campos!");
        return;
      }

      produtos.push({ nome, preco });
      atualizarLista();
      document.getElementById("nomeProduto").value = "";
      document.getElementById("precoProduto").value = "";
    }

    function atualizarLista() {
      const lista = document.getElementById("listaProdutos");
      lista.innerHTML = "";
      produtos.forEach((p, i) => {
        lista.innerHTML += `
          <div>
            <strong>${p.nome}</strong> - R$ ${p.preco} 
            <button onclick="comprar(${i})">Comprar</button>
          </div>
        `;
      });
    }

    function comprar(i) {
      const produto = produtos[i];
      alert("Redirecionando para pagamento do produto: " + produto.nome);
      // Aqui vocÃª pode integrar API do Mercado Pago
    }

    function sacar() {
      const chavePix = document.getElementById("chavePix").value;
      let valor = parseFloat(document.getElementById("valorSaque").value);

      if (!chavePix || !valor) {
        alert("Preencha todos os campos!");
        return;
      }

      const taxa = valor * 0.05;
      const valorFinal = valor - taxa;

      document.getElementById("msgSaque").innerText =
        `VocÃª vai receber R$ ${valorFinal.toFixed(2)} na chave ${chavePix}. ` +
        `Taxa de R$ ${taxa.toFixed(2)} enviada para jnpereiraalves@gmail.com`;
    }
  </script>
